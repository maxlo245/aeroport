{
    "name": "aeroport/site-web",
    "description": "Airport website project",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "pestphp/pest": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
